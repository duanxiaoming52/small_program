/* word/pages/index/index.wxss */
.container{
  padding: 12rpx 30rpx;
}
.container .search{
  margin-top: 12rpx;
  margin-bottom:12rpx;
  position: relative;
  padding: 12rpx 100rpx 12rpx 12rpx;
  background-color: #f0f0f0;
}
.container .search input{
  background-color: #fff;
  height: 48rpx;
  padding: 0rpx 24rpx;
}
.container .search .cancel{
  position: absolute;
  right: 100rpx;
  top:18rpx;
  padding:2rpx 6rpx;
  z-index: 1;
}
.container .search .submit{
  position: absolute;
  right: 0rpx;
  top:6rpx;
  padding: 16rpx 24rpx;
}
.container .items{
  min-height: 730rpx
}
.container .items .item{
  float:left;
  width: 170rpx;
  height: 170rpx;
  margin-left:2rpx;
  margin-bottom: 12rpx;
}
.container .items .item image{
  width: 100%;
  height: 100%;
}
.container .alert{
  color: #FF0000;
  font-size: 20rpx;
}